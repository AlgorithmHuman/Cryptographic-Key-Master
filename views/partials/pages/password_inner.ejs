<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
      <div class="text-center">
        <form action="/password" method="post">
          <% if (messages.info) { %>
          <div class="card">
            <div class="card-text">
              <code><%= JSON.stringify(messages.info) %> </code>
            </div>
          </div>
          <% } %>
          <fieldset class="form-group">
            <hr />
            <label for="exampleInputPassword1" class="form-label mt-4"
              >Password</label
            >
            <input
              type="text"
              name="password"
              class="form-control"
              id="exampleInputPassword1"
              placeholder="MYSECRETPASSWORD"
              required
            />
            <label for="exampleInputPassword2" class="form-label mt-4"
            >Salt (Default 10)</label>
            <input
            type="number"
            name="salt"
            class="form-control"
            id="exampleInputPassword2"
            placeholder="10"
            min="1"
            max="10"
            required
          />
            <hr />
            <button
              type="submit"
              class="btn btn-lg btn-primary"
              style="margin-top: 20px"
            >
              GENERATE HASH
            </button>
          </fieldset>
        </form>
      </div>
    </div>
    <div class="col-sm"></div>
  </div>
</div>

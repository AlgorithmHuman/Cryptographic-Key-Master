<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
      <div class="text-center">
        <form action="/jwt" method="post">
          <% if (messages.info) { %>
          <div class="card">
            <div class="card-text">
              <code><%= JSON.stringify(messages.info) %> </code>
            </div>
          </div>
          <% } %>
          <fieldset class="form-group">
            <hr />
            <label for="exampleInputPassword1" class="form-label mt-4"
              >Bytes</label
            >
            <input
              type="number"
              name="bytes"
              class="form-control"
              id="exampleInputPassword1"
              placeholder="64"
              min="1"
              max="99"
              required
            />
            <hr />
            <button
              type="submit"
              class="btn btn-lg btn-primary"
              style="margin-top: 20px"
            >
              GENERATE
            </button>
          </fieldset>
        </form>
      </div>
    </div>
    <div class="col-sm"></div>
  </div>
</div>
